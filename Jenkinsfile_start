pipeline {

    environment {
        DOCKERHUB_CREDENTIALS = credentials('avicoiot-dockerhub')
        PRODUCT = 'ADI'
        GIT_HOST = 'somewhere'
        GIT_REPO = 'repo'
    }
    agent { label 'linux'}

    options {
        ansiColor('xterm')
        skipDefaultCheckout()
        buildDiscarder(logRotator(numToKeepStr: '3'))
    }
    stages {
        stage('Build') {
            steps {
                sh 'docker build -t avicoiot/adi-alpine:latest .'
                }
            }
        stage('Login') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -i $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                }
            }
        stage('Push') {
            steps {
                sh 'docker push avicoiot/adi-alpine:latest'
                }
            }
        }
        post {
        always {
        sh 'docker logout'
        }
    }
}
