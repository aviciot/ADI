pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'ADI !'

                checkout scmGit(branches: [[name: '*/DevRabbit']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/avico78/ADI.git']])
            }
        }
        stage('Build') {
            steps {
                git branch: 'DevRabbit', url: 'https://github.com/avico78/ADI.git'
                pip install -r requirements.txt
                cd app_config
                python3 settings.py
            }
        }
    }
}
